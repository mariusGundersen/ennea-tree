{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2017",
    "module": "es2015",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "include": [
    "./src/*.ts"
  ],
  "compileOnSave": true
}